@model List<TasksMVC.Models.Tarea>

@{
    ViewBag.Title = "Lista Tareas";
}

<div class="row">
    <div class="col s12 m12 l12">
        <a href="/Tarea/Agregar" class="btn">Agregar Tarea</a>
    </div>
</div>
<br />
<div class="row">
    @foreach (var tarea in Model)
    {
        <div class="col s12 m6 l6">
            <div class="card">
                <div class="card-content">
                    <div class="card-title">
                        @tarea.Titulo
                    </div>
                    <p>Asiganda a: @tarea.AsignadaA</p>
                    <p>
                        Completada:
                        @if (tarea.Completada)
                        {
                            <span><i class="material-icons">check</i></span>
                        }
                        else
                        {
                            <span><i class="material-icons">close</i></span>
                        }
                    </p>
                    <br />
                    @if (!tarea.Completada)
                    {
                        <a class="btn" href="/Tarea/Completar/@tarea.Id">Completar</a>
                    }
                    <a class="btn" href="/Tarea/Remover/@tarea.Id">Remover</a>

                </div>
            </div>
        </div>
    }
</div>


