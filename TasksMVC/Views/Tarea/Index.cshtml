@model List<TasksMVC.Models.Tarea>

@{
    ViewBag.Title = "Lista Tareas";
}

<div class="row">
    @foreach (var tarea in Model)
    {
        <div class="col s12 m6 l6">
            <div class="card">
                <div class="card-content">
                    <div class="card-title">
                        @tarea.Titulo
                    </div>
                    <p>Asiganda a: @tarea.AsignadaA</p>
                    <p>Completada? @(tarea.Completada ? "Sí" : "No")</p>
                </div>
            </div>
        </div>
    }
</div>


